<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031">

        <RelativeLayout
            android:id="@+id/relativeLayoutRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <ImageView
                android:id="@+id/showImageID"
                android:layout_width="@dimen/poster_thumb_width"
                android:layout_height="@dimen/poster_thumb_height"
                android:background="@color/background"/>

            <TextView
                android:id="@+id/showTitleID"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/showImageID"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:text="TV Show Title"/>

            <TextView
                android:id="@+id/voteAvgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showTitleID"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/showImageID"
                android:padding="5dp"
                android:text=""/>

            <TextView
                android:id="@+id/showOverviewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/voteAvgID"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/showImageID"
                android:padding="5dp"
                android:text=""/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>