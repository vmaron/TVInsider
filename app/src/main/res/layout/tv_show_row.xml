<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031" >

        <RelativeLayout
            android:id="@+id/relativeLayoutRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/showImageID"
                android:background="@android:color/background_dark"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/showTitleID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/showImageID"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:text="TV Show Title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/showReleaseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/showImageID"
                android:layout_below="@+id/showTitleID"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:text="Released"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>